<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scanlibrary" >
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:theme="@style/AppCompatNoActionBarTheme"
        android:allowBackup="true"
        android:label="@string/app_name" >

        <activity
            android:name=".ScanActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" />

        <activity android:name="com.gaadi.neon.activity.GalleryActivity"
                  android:screenOrientation="portrait" />

        <activity android:name="com.gaadi.neon.activity.FolderFiles"
                  android:screenOrientation="portrait" />
        <activity
            android:name="com.gaadi.neon.activity.NeutralActivity"
            android:label="@string/title_activity_neutral"
            android:screenOrientation="portrait" />

        <activity android:name="com.gaadi.neon.activity.ReviewImageActivity"
                  android:screenOrientation="portrait" />

        <activity
            android:name=".ImageReviewActivity"
            android:screenOrientation="portrait" />

    </application>
</manifest>